<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="38dp"
    android:background="@drawable/bg_radius_white"
    android:layout_marginLeft="38dp">
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="27dp"
        android:layout_marginLeft="27dp"
        android:textSize="16sp"
        android:text="为了更好的了解您的意见，请您留下您的联系方式。"
        android:textColor="#1d1d1d"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="20dp"
        />
    <EditText
        android:id="@+id/et_dialog_contact"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:background="@drawable/feedback_chat_et_bg"
        android:hint="请输入您的手机号/微信/QQ"
        android:textColorHint="#939393"
        android:layout_marginRight="27dp"
        android:layout_marginLeft="27dp"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="11dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f1f3f4"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_dialog_skip"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textSize="18sp"
            android:text="跳过"
            android:gravity="center"
            android:textColor="#0873d2"
            android:layout_height="match_parent" />

        <View
            android:background="#f1f3f4"
            android:layout_width="0.5dp"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_dialog_confirm"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:text="提交"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="#0873d2"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>