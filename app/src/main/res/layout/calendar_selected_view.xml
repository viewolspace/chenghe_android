<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">
    <com.parttime.happy.view.NumberPickerView
        android:id="@+id/year_nv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:npv_MarginStartOfHint="10dp"
        app:npv_ShowCount="5"
        app:npv_ShowDivider="false"
        app:npv_TextColorHint="#333333"
        app:npv_TextColorNormal="#999999"
        app:npv_TextColorSelected="#333333"
        app:npv_TextSizeHint="18dp"
        app:npv_TextSizeNormal="18dp"
        app:npv_TextSizeSelected="20dp"/>

    <com.parttime.happy.view.NumberPickerView
        android:id="@+id/month_nv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:npv_MarginStartOfHint="10dp"
        app:npv_ShowCount="5"
        app:npv_ShowDivider="false"
        app:npv_TextColorHint="#333333"
        app:npv_TextColorNormal="#999999"
        app:npv_TextColorSelected="#333333"
        app:npv_TextSizeHint="18dp"
        app:npv_TextSizeNormal="18dp"
        app:npv_TextSizeSelected="20dp"/>

    <com.parttime.happy.view.NumberPickerView
        android:id="@+id/day_nv"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:npv_MarginStartOfHint="10dp"
        app:npv_ShowCount="5"
        app:npv_ShowDivider="false"
        app:npv_TextColorHint="#333333"
        app:npv_TextColorNormal="#999999"
        app:npv_TextColorSelected="#333333"
        app:npv_TextSizeHint="18dp"
        app:npv_TextSizeNormal="18dp"
        app:npv_TextSizeSelected="20dp"/>
</LinearLayout>