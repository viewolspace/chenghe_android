<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="20dp"
    tools:context="com.parttime.rainbow.activity.SearchActivity">

    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:paddingRight="20dp"
            android:src="@drawable/back"/>
        <EditText
            android:id="@+id/et_search"
            android:layout_toRightOf="@id/iv_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/home_search_icon"
            android:paddingLeft="19dp"
            android:textColor="@color/color_2A2A2A"
            android:textSize="15sp"
            android:drawablePadding="12dp"
            android:minHeight="29dp"
            android:textColorHint="#939393"
            android:hint="输入您想搜索的内容"
            android:background="@drawable/shape_retangle_e9e9e9_r15"/>
    </RelativeLayout>

    <TextView
        android:layout_below="@id/rl_search"
        android:id="@+id/tv_search_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索结果"
        android:textSize="13sp"
        android:textColor="@color/color_939393"
        android:layout_marginTop="18dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"/>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/smart_refresh"
        android:layout_below="@id/tv_search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.scwang.smartrefresh.layout.header.ClassicsHeader
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <com.scwang.smartrefresh.layout.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>
    <RelativeLayout
        android:id="@+id/rl_no_data"
        android:layout_below="@id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <ImageView
            android:id="@+id/iv_no_data"
            android:layout_width="263dp"
            android:layout_height="263dp"
            android:layout_centerInParent="true"
            android:src="@drawable/search_no_data"/>

        <TextView
            android:id="@+id/tv_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="无搜索内容"
            android:textSize="16sp"
            android:textColor="@color/color_0d0d0d"
            android:layout_alignBottom="@id/iv_no_data"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:visibility="gone"/>
    </RelativeLayout>

</RelativeLayout>
