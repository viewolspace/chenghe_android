<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.example.chenghejianzhi.activity.SearchActivity">

    <RelativeLayout
        android:id="@+id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:drawableLeft="@drawable/home_search_icon"
            android:paddingLeft="19dp"
            android:textColor="@color/color_2A2A2A"
            android:textSize="15sp"
            android:drawablePadding="12dp"
            android:minHeight="29dp"
            android:textColorHint="#939393"
            android:hint="输入您想搜索的内容"
            android:background="@drawable/shape_retangle_e9e9e9_r15"/>
    </RelativeLayout>

    <TextView
        android:layout_below="@id/rl_search"
        android:id="@+id/tv_search_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索结果"
        android:textSize="13sp"
        android:textColor="@color/color_939393"
        android:layout_marginTop="18dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_below="@id/tv_search_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"/>
    <RelativeLayout
        android:id="@+id/rl_no_data"
        android:layout_below="@id/rl_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ImageView

            android:layout_width="263dp"
            android:layout_height="263dp"
            android:layout_centerInParent="true"
            android:src="@drawable/search_no_data"/>
    </RelativeLayout>

</RelativeLayout>
